<idea-plugin>
	<id>com.github.zxj5470.bugktdoc</id>
	<name>BugKotlinDocument</name>
	<version>0.2.0</version>
	<vendor email="zxj5470@foxmail.com" url="https://github.com/zxj5470/BugKotlinDocument/issues">zxj5470</vendor>

	<description>To generate Kotlin document comment in Kotlin File</description>

	<change-notes>
		v0.2.0: A new version because You only need to press Enter Key just like generating vanilla Java Doc!
		Disable it on editor | BugKotlinDocument.
	</change-notes>

	<idea-version since-build="139"/>

	<extensions defaultExtensionNs="com.intellij">
		<enterHandlerDelegate implementation="com.github.zxj5470.bugktdoc.BugBtDocEnterHandlerDelegate"/>
		<typedHandler implementation="com.github.zxj5470.bugktdoc.BugKtDocEditorTypedHandler"/>
		<projectConfigurable groupId="editor"
									id="com.github.zxj5470.bugktdoc.projectConfigurable"
									instance="com.github.zxj5470.bugktdoc.options.BugKtDocConfigureFormImpl"/>
		<applicationService
			serviceInterface="com.github.zxj5470.bugktdoc.options.BugKtDocGlobalSettings"
			serviceImplementation="com.github.zxj5470.bugktdoc.options.BugKtDocGlobalSettingsImpl"/>

	</extensions>
	<depends>com.intellij.modules.lang</depends>
</idea-plugin>