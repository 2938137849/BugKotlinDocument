<idea-plugin>
	<id>cn.wjdghd.unique.plugin.id</id>
	<name>BugKotlinDocument</name>
	<vendor email="2938137849@qq.com" url="https://github.com/2938137849/BugKotlinDocument">2938137849</vendor>
	<depends optional="true" config-file="">org.jetbrains.kotlin</depends>
	<depends>com.intellij.modules.lang</depends>

	<description><![CDATA[
		<br/>
		<h1>Usage</h1>
		<br/>
		<h2>
			Just press <kbd>Enter</kbd> after <code>/**</code>
		</h2>
		<br/>
		<img src="https://raw.githubusercontent.com/zxj5470/BugKotlinDocument/master/images/pic02.png" alt=""/>
		<br/>
		<h3>Settings in Editor | BugKotlinDocument </h3>
		]]>
	</description>
	<change-notes>Disable it on editor | BugKotlinDocument.</change-notes>

	<idea-version since-build="213"/>

	<extensions defaultExtensionNs="com.intellij">
		<lang.documentationProvider language="kotlin"
			implementationClass="com.github.bin.bugktdoc.BugKtDocumentationProvider"/>
		<typedHandler implementation="com.github.bin.bugktdoc.BugKtDocEditorTypedHandler"/>
		<applicationConfigurable groupId="editor"
			id="com.github.bin.bugktdoc.applicationConfigurable"
			instance="com.github.bin.bugktdoc.options.BugKtDocConfigureFormImpl"/>
		<applicationService
			serviceInterface="com.github.bin.bugktdoc.options.BugKtDocGlobalSettings"
			serviceImplementation="com.github.bin.bugktdoc.options.BugKtDocGlobalSettingsImpl"/>

	</extensions>
</idea-plugin>
